{
    "description": "Laravel OTP generator and validation",
    "keywords": [
        "laravel",
        "otp",
        "one time passwords",
        "one time pin",
        "email validation",
        "mobile validation"
    ],
    "license": "MIT",    
    "extra": {
        "laravel": {
            "providers": [
                "Radon\\Otp\\OtpServiceProvider"
            ],
            "aliases": {
                "Otp": "Radon\\Otp\\OtpFacade"
            }
        }
    },
    "require": {
        "php": "^5.5.9|^7.0|^8.0",
        "illuminate/support": "^5.2|^6.0|^7.0|^8.0"
    },
    "autoload": {
        "psr-4": {
            "Radon\\Otp\\": "src"
        }
    }
}
